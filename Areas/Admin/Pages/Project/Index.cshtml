@page
@model NewAssignment2019.Areas.Admin.Pages.Project.IndexModel

@{
    ViewData["Title"] = "Project List";
}

<h1>@ViewData["Title"] <a asp-page="Create"><i class="fa fa-plus-square"></i></a></h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectClients[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectClients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectClients[0].ClientId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProjectClients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Code)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.Id"><i class="fa fa-trash red"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
