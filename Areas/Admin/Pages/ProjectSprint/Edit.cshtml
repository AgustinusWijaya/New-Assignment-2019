@page
@model NewAssignment2019.Areas.Admin.Pages.ProjectSprint.EditModel

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/table-responsive.css" />
<h1>Edit Project Sprint</h1>


<table width="100%">
    <tr>
        <td id="leftPane" style="width:100%; padding:10px" class="table">
            <div class="row">
                <div class="col-md-9">
                    <form method="post">
                        <input type="hidden" asp-for="ProjectSprint.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ProjectSprint.ProjectId" class="control-label"></label>
                            <select asp-for="ProjectSprint.ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                            <span asp-validation-for="ProjectSprint.ProjectId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProjectSprint.Code" class="control-label"></label>
                            <input asp-for="ProjectSprint.Code" class="form-control" />
                            <span asp-validation-for="ProjectSprint.Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProjectSprint.Name" class="control-label"></label>
                            <input asp-for="ProjectSprint.Name" class="form-control" />
                            <span asp-validation-for="ProjectSprint.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProjectSprint.Description" class="control-label"></label>
                            <textarea asp-for="ProjectSprint.Description" class="form-control"></textarea>
                            <span asp-validation-for="ProjectSprint.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProjectSprint.DateBegin" class="control-label"></label>
                            <input asp-for="ProjectSprint.DateBegin" class="form-control" />
                            <span asp-validation-for="ProjectSprint.DateBegin" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProjectSprint.DateEnd" class="control-label"></label>
                            <input asp-for="ProjectSprint.DateEnd" class="form-control" />
                            <span asp-validation-for="ProjectSprint.DateEnd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </td>

        <td id="rightPane" style="width:100%; vertical-align:top; padding:10px">
            <div class="row">
                <div class="col-md-12">
                    <h4>Backlog</h4>

                    <div class="row">
                        <div class="col-md-12"><label>Feature</label></div>
                        <div class="w-100"></div>
                        <div class="col-md-12"><label>Priority/Status</label></div>
                        <div class="w-100"></div>
                        <div class="col-md-12"><label>Assignee/Assigned Date</label></div>
                        <div class="w-100"></div>
                    </div>

                    <hr />

                    @if (Model.ProjectBacklogs.Any())
                    {
                        @foreach (var item in Model.ProjectBacklogs)
                        {

                            <div class="row">
                                <div class="col-md-12">@item.ProjectFeature.Name</div>
                                <div class="w-100"></div>
                                <div class="col-md-12">@item.Priority / @item.Status</div>
                                <div class="w-100"></div>
                                <div class="col-md-12">@item.Assignee / @item.AssignedDate</div>
                                <div class="w-100"></div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="bg-warning text-black">No data available.</div>
                    }
                </div>
            </div>
        </td>
    </tr>
</table>


<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
